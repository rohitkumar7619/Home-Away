<% layout("layouts/boilerplate") %>

<!-- Add Chart.js for data visualization -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<!-- Add ApexCharts for more advanced visualizations -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<style>
  :root {
    --primary-color: #4361ee;
    --primary-light: #5a72f0;
    --secondary-color: #3f37c9;
    --accent-color: #4cc9f0;
    --dark-color: #1e293b;
    --light-color: #f8fafc;
    --success-color: #10b981;
    --warning-color: #f59e0b;
    --danger-color: #ef4444;
    --info-color: #3b82f6;
    --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.1);
    --shadow-md: 0 10px 15px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 25px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    --border-radius: 12px;
    --card-bg: #ffffff;
    --sidebar-bg: #1e293b;
    --sidebar-text: #f8fafc;
  }

  .admin-dashboard {
    padding: 2rem;
    max-width: 1800px;
    margin: 0 auto;
    background-color: #f5f7fa;
    min-height: 100vh;
  }

  .dashboard-header {
    margin-bottom: 2.5rem;
    text-align: center;
    position: relative;
  }

  .dashboard-header h1 {
    font-size: 2.8rem;
    font-weight: 800;
    color: var(--dark-color);
    margin-bottom: 0.5rem;
    position: relative;
    display: inline-block;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .dashboard-header p {
    color: #64748b;
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .greeting {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 1rem;
    color: var(--primary-color);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Stats Cards */
  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .stat-card {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    border: none;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, var(--primary-color), var(--accent-color));
  }

  .stat-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .stat-icon {
    width: 70px;
    height: 70px;
    background: rgba(67, 97, 238, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: var(--primary-color);
    font-size: 1.8rem;
    transition: var(--transition);
  }

  .stat-card:hover .stat-icon {
    background: var(--primary-color);
    color: white;
    transform: scale(1.1) rotate(10deg);
  }

  .stat-number {
    font-size: 2.8rem;
    font-weight: 800;
    color: var(--dark-color);
    margin: 0.5rem 0;
    transition: var(--transition);
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    color: #64748b;
    font-size: 1.05rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .stat-trend {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    font-weight: 600;
  }

  .trend-up {
    color: var(--success-color);
  }

  .trend-down {
    color: var(--danger-color);
  }

  .stat-actions {
    margin-top: auto;
  }

  .stat-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 1.5rem;
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
    text-align: center;
    box-shadow: var(--shadow-sm);
    gap: 0.5rem;
    width: auto;
    margin: 0 auto;
  }

  .stat-btn:hover {
    background: linear-gradient(to right, var(--primary-light), var(--primary-color));
    box-shadow: var(--shadow-md);
    transform: translateY(-3px);
  }

  /* Quick Actions */
  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.8rem;
    margin-bottom: 3rem;
  }

  .action-card {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: var(--transition);
    border: none;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .action-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .action-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, var(--primary-color), var(--accent-color));
  }

  .action-icon {
    width: 70px;
    height: 70px;
    background: rgba(67, 97, 238, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: var(--primary-color);
    font-size: 1.8rem;
    transition: var(--transition);
  }

  .action-card:hover .action-icon {
    background: var(--primary-color);
    color: white;
    transform: rotate(15deg) scale(1.1);
  }

  .action-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--dark-color);
  }

  .action-card p {
    color: #64748b;
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  /* Dashboard Grid Layout */
  .dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 1200px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Main Chart Section */
  .main-chart {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
    height: 100%;
  }

  /* Recent Activity Sections */
  .dashboard-section {
    margin-bottom: 3rem;
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.8rem;
  }

  .section-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--dark-color);
    position: relative;
    padding-bottom: 0.5rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50px;
    height: 4px;
    background: linear-gradient(to right, var(--primary-color), var(--accent-color));
    border-radius: 2px;
  }

  .view-all-btn {
    padding: 0.6rem 1.2rem;
    background: var(--primary-color);
    color: white;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: var(--transition);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .view-all-btn:hover {
    background: var(--primary-light);
    transform: translateY(-3px);
    box-shadow: var(--shadow-sm);
  }

  /* Recent Bookings */
  .recent-bookings {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
    border: none;
  }

  .booking-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-radius: 10px;
    transition: var(--transition);
    margin-bottom: 1rem;
    background: rgba(248, 250, 252, 0.7);
  }

  .booking-item:hover {
    background-color: rgba(67, 97, 238, 0.05);
    transform: translateX(8px);
  }

  .booking-info {
    flex: 1;
  }

  .booking-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 0.5rem;
  }

  .booking-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    color: #64748b;
    font-size: 0.95rem;
  }

  .booking-meta span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .booking-meta i {
    font-size: 0.9rem;
    color: var(--primary-color);
  }

  .booking-actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: var(--transition);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--primary-color);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-light);
    transform: translateY(-3px);
    box-shadow: var(--shadow-sm);
  }

  .btn-outline {
    background: transparent;
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
  }

  .btn-outline:hover {
    background: rgba(67, 97, 238, 0.1);
    transform: translateY(-3px);
  }

  .btn-danger {
    background: var(--danger-color);
    color: white;
  }

  .btn-danger:hover {
    background: #dc2626;
    transform: translateY(-3px);
    box-shadow: var(--shadow-sm);
  }

  .btn-success {
    background: var(--success-color);
    color: white;
  }

  .btn-success:hover {
    background: #0d9f6e;
    transform: translateY(-3px);
    box-shadow: var(--shadow-sm);
  }

  /* Recent Users */
  .recent-users {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
    border: none;
  }

  .user-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem;
    border-radius: 10px;
    transition: var(--transition);
    margin-bottom: 1rem;
    background: rgba(248, 250, 252, 0.7);
  }

  .user-item:hover {
    background-color: rgba(67, 97, 238, 0.05);
    transform: translateX(8px);
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .user-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
    box-shadow: var(--shadow-sm);
  }

  .user-details h5 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.3rem;
    color: var(--dark-color);
  }

  .user-details p {
    color: #64748b;
    font-size: 0.9rem;
  }

  .user-status {
    padding: 0.4rem 0.9rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .status-admin {
    background: rgba(67, 97, 238, 0.1);
    color: var(--primary-color);
  }

  .status-user {
    background: rgba(100, 116, 139, 0.1);
    color: #64748b;
  }

  /* Notifications Section */
  .notifications {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
  }

  .notification-item {
    display: flex;
    gap: 1.2rem;
    padding: 1.2rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .notification-item:last-child {
    border-bottom: none;
  }

  .notification-icon {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .notification-info {
    flex: 1;
  }

  .notification-title {
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: var(--dark-color);
  }

  .notification-message {
    color: #64748b;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .notification-time {
    font-size: 0.8rem;
    color: #94a3b8;
  }

  .notification-unread {
    background-color: rgba(67, 97, 238, 0.05);
  }

  /* Activity Timeline */
  .activity-timeline {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
  }

  .timeline-item {
    position: relative;
    padding-left: 2.5rem;
    padding-bottom: 2rem;
    border-left: 2px solid rgba(67, 97, 238, 0.2);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: -9px;
    top: 0;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--primary-color);
    border: 3px solid white;
    box-shadow: 0 0 0 2px var(--primary-color);
  }

  .timeline-date {
    font-size: 0.85rem;
    color: #64748b;
    margin-bottom: 0.5rem;
  }

  .timeline-content {
    background: rgba(248, 250, 252, 0.7);
    padding: 1rem;
    border-radius: 8px;
  }

  .timeline-title {
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: var(--dark-color);
  }

  .timeline-description {
    color: #64748b;
    font-size: 0.9rem;
  }

  /* Mini Chart */
  .mini-chart-container {
    height: 70px;
    width: 100%;
    margin-top: 1.5rem;
  }

  /* Main Chart */
  .main-chart-container {
    height: 350px;
    width: 100%;
    margin-top: 1.5rem;
  }

  /* Calendar Widget */
  .calendar-widget {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.8rem;
    box-shadow: var(--shadow-md);
  }

  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .calendar-title {
    font-weight: 600;
    color: var(--dark-color);
  }

  .calendar-nav {
    display: flex;
    gap: 0.5rem;
  }

  .calendar-nav-btn {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(67, 97, 238, 0.1);
    color: var(--primary-color);
    cursor: pointer;
    transition: var(--transition);
  }

  .calendar-nav-btn:hover {
    background: var(--primary-color);
    color: white;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .calendar-day-header {
    text-align: center;
    font-size: 0.85rem;
    font-weight: 600;
    color: #64748b;
    padding: 0.5rem 0;
  }

  .calendar-day {
    text-align: center;
    padding: 0.7rem 0;
    border-radius: 8px;
    cursor: pointer;
    transition: var(--transition);
    position: relative;
  }

  .calendar-day:hover {
    background: rgba(67, 97, 238, 0.1);
  }

  .calendar-day.today {
    background: var(--primary-color);
    color: white;
    font-weight: 600;
  }

  .calendar-day.event-day::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--primary-color);
  }

  .calendar-day.today.event-day::after {
    background: white;
  }

  .calendar-events {
    margin-top: 1.5rem;
  }

  .calendar-event {
    padding: 0.8rem;
    border-radius: 8px;
    background: rgba(67, 97, 238, 0.05);
    margin-bottom: 0.8rem;
  }

  .calendar-event-title {
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: var(--dark-color);
  }

  .calendar-event-time {
    font-size: 0.85rem;
    color: #64748b;
  }

  /* Responsive Adjustments */
  @media (max-width: 1200px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 992px) {
    .dashboard-header h1 {
      font-size: 2.4rem;
    }
    
    .stats-container {
      grid-template-columns: 1fr 1fr;
    }
    
    .quick-actions {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .booking-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.2rem;
    }
    
    .booking-actions {
      width: 100%;
      justify-content: flex-end;
    }
    
    .stats-container {
      grid-template-columns: 1fr;
    }
    
    .quick-actions {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .admin-dashboard {
      padding: 1.5rem;
    }
    
    .dashboard-header h1 {
      font-size: 2rem;
    }
    
    .section-title {
      font-size: 1.4rem;
    }
    
    .booking-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>

<div class="admin-dashboard">
  <div class="dashboard-header">
    <div class="greeting">
      <i class="fas fa-sun"></i>
      <span id="greeting-text">Good morning</span>
    </div>
    <h1>Admin Dashboard</h1>
    <p>Welcome back! Here's what's happening with your business today. You have <span class="text-primary"><%= typeof notificationCount !== 'undefined' ? notificationCount : '0' %> new notifications</span> and <span class="text-primary"><%= typeof pendingTasks !== 'undefined' ? pendingTasks : '0' %> pending tasks</span> to review.</p>
  </div>

  <!-- Statistics Cards -->
  <div class="dashboard-section">
    <div class="section-header">
      <h2 class="section-title">Business Overview</h2>
      <div class="time-filter">
        <select class="form-select" id="time-filter">
          <option value="today">Today</option>
          <option value="week">This Week</option>
          <option value="month" selected>This Month</option>
          <option value="year">This Year</option>
        </select>
      </div>
    </div>
    <div class="stats-container">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-number"><%= userCount %></div>
        <div class="stat-label">Total Users</div>
        <div class="stat-trend trend-up">
          <i class="fas fa-arrow-up"></i> 12.5% from last month
        </div>
        <div class="stat-actions">
          <a href="/admin/users" class="stat-btn">
            <i class="fas fa-arrow-right"></i> View All
          </a>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-home"></i>
        </div>
        <div class="stat-number"><%= listingCount %></div>
        <div class="stat-label">Active Listings</div>
        <div class="stat-trend trend-up">
          <i class="fas fa-arrow-up"></i> 8.3% from last month
        </div>
        <div class="stat-actions">
          <a href="/admin/listings" class="stat-btn">
            <i class="fas fa-arrow-right"></i> View All
          </a>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-number"><%= bookingCount %></div>
        <div class="stat-label">Total Bookings</div>
        <div class="stat-trend trend-up">
          <i class="fas fa-arrow-up"></i> 15.2% from last month
        </div>
        <div class="stat-actions">
          <a href="/admin/bookings" class="stat-btn">
            <i class="fas fa-arrow-right"></i> View All
          </a>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-rupee-sign"></i>
        </div>
        <div class="stat-number">₹<%= typeof totalRevenue !== 'undefined' ? totalRevenue.toLocaleString('en-IN') : '0' %></div>
        <div class="stat-label">Total Revenue</div>
        <div class="stat-trend trend-up">
          <i class="fas fa-arrow-up"></i> 22.7% from last month
        </div>
        <div class="stat-actions">
          <a href="/admin/charts" class="stat-btn">
            <i class="fas fa-arrow-right"></i> View Reports
          </a>
        </div>
      </div>
    </div>
  </div>

