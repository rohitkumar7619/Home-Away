<% layout("layouts/boilerplate") %>

<style>
  .admin-dashboard {
    padding: 2rem;
  }
  
  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .stat-card {
    background: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
  }
  
  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #4361ee;
    margin: 0.5rem 0;
  }
  
  .stat-label {
    color: #6c757d;
    font-size: 1rem;
  }
  
  .recent-bookings {
    background: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .booking-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
  }
  
  .booking-item:last-child {
    border-bottom: none;
  }
  
  .booking-info {
    flex: 1;
  }
  
  .booking-actions {
    margin-left: 1rem;
  }
  
  .admin-section-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: #343a40;
    border-bottom: 2px solid #4361ee;
    padding-bottom: 0.5rem;
    display: inline-block;
  }
</style>

<div class="admin-dashboard">
  <h1>Admin Dashboard</h1>
  
  <div class="stats-container">
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-users fa-2x"></i>
      </div>
      <div class="stat-number"><%= userCount %></div>
      <div class="stat-label">Total Users</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-home fa-2x"></i>
      </div>
      <div class="stat-number"><%= listingCount %></div>
      <div class="stat-label">Total Listings</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-calendar-check fa-2x"></i>
      </div>
      <div class="stat-number"><%= bookingCount %></div>
      <div class="stat-label">Total Bookings</div>
    </div>
  </div>
  
  <div class="recent-bookings mt-5">
    <h2 class="admin-section-title">Recent Bookings</h2>
    
    <% if (recentBookings.length > 0) { %>
      <% recentBookings.forEach(booking => { %>
        <div class="booking-item">
          <div class="booking-info">
            <h5><%= booking.listing.title %></h5>
            <p>
              <strong>User:</strong> <%= booking.user.username %> |
              <strong>Dates:</strong> 
              <%= booking.startDate.toLocaleDateString() %> - 
              <%= booking.endDate.toLocaleDateString() %>
            </p>
          </div>
          <div class="booking-actions">
            <a href="/admin/bookings" class="btn btn-sm btn-primary">View</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No recent bookings found.</p>
    <% } %>
  </div>
</div>