<% layout("layouts/boilerplate") %>

<style>
  .admin-listings {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .page-title {
    font-size: 2rem;
    color: #2c3e50;
    margin: 0;
    position: relative;
  }

  .page-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: #000000;
    border-radius: 2px;
  }

  .listing-table-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .listing-table {
    width: 100%;
    border-collapse: collapse;
  }

  .listing-table th {
    background: linear-gradient(135deg, #1f201f, #747786);
    color: white;
    font-weight: 600;
    padding: 1.2rem;
    text-align: left;
  }

  .listing-table td {
    padding: 1.2rem;
    border-bottom: 1px solid #f0f2f5;
    vertical-align: middle;
  }

  .listing-table tr:last-child td {
    border-bottom: none;
  }

  .listing-table tr:hover td {
    background-color: #f8fafc;
  }

  .listing-image {
    width: 80px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .action-buttons {
    display: flex;
    gap: 0.6rem;
  }

  .btn {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s;
    border: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-view {
    background-color: #4361ee;
    color: white;
  }

  .btn-view:hover {
    background-color: #3a56d4;
  }

  .btn-delete {
    background-color: #ef4444;
    color: white;
  }

  .btn-delete:hover {
    background-color: #dc2626;
  }

  .btn-add {
    background: linear-gradient(135deg, #4361ee, #3a56d4);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: #64748b;
  }

  .empty-icon {
    font-size: 3rem;
    color: #cbd5e1;
    margin-bottom: 1rem;
  }
</style>

<div class="admin-listings">
  <div class="page-header">
    <h1 class="page-title">Manage Listings</h1>
    <a href="/listings/new" class="btn btn-add">
      <i class="fas fa-plus"></i> Add New Listing
    </a>
  </div>
  
  <div class="listing-table-container">
    <% if (listings.length > 0) { %>
      <table class="listing-table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Location</th>
            <th>Price</th>
            <th>Owner</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% listings.forEach(listing => { %>
            <tr>
              <td>
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-image">
              </td>
              <td><%= listing.title %></td>
              <td><%= listing.location %></td>
              <td>â‚¹<%= listing.price.toLocaleString("en-IN") %></td>
              <td><%= listing.owner.username %></td>
              <td>
                <div class="action-buttons">
                  <a href="/listings/<%= listing._id %>" class="btn btn-view">
                    <i class="fas fa-eye"></i> View
                  </a>
                  <form action="/admin/listings/<%= listing._id %>" method="POST" class="d-inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-delete">
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i class="fas fa-home"></i>
        </div>
        <h3>No Listings Found</h3>
        <p>There are currently no property listings in the system.</p>
        <a href="/listings/new" class="btn btn-add">
          <i class="fas fa-plus"></i> Add First Listing
        </a>
      </div>
    <% } %>
  </div>
</div>

<script>
  // Add confirmation for delete actions
  document.querySelectorAll('form[action*="/delete"]').forEach(form => {
    form.addEventListener('submit', function(e) {
      if (!confirm('Are you sure you want to delete this listing? This action cannot be undone.')) {
        e.preventDefault();
      }
    });
  });
</script>