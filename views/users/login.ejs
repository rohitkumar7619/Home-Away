<% layout("layouts/boilerplate") %>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap");

  .form-container {
    padding: 40px;
    width: 100%;
    max-width: 400px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .centered-heading {
    font-size: 2.2em;
    font-weight: 700;
    margin-bottom: 25px;
    color: #333;
  }

  .form-group {
    margin-bottom: 20px;
    text-align: left;
  }

  .form-group label {
    font-size: 1em;
    font-weight: 600;
    color: #555;
    display: block;
    margin-bottom: 6px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1em;
    transition: border 0.3s ease-in-out;
    outline: none;
  }

  .form-group input:focus {
    border-color: #ff357a;
    box-shadow: 0 0 8px rgba(255, 53, 122, 0.5);
  }

  .btn-primary {
    width: 100%;
    padding: 12px;
    font-size: 1.1em;
    font-weight: 600;
    background: #ff357a;
    border: none;
    border-radius: 8px;
    color: #fff;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 53, 122, 0.3);
  }

  .invalid-feedback {
    color: #ff4d4d;
    font-size: 0.9em;
    margin-top: 5px;
  }
</style>

<div class="form-container">
  <h2 class="centered-heading">Login</h2>
  <form action="/login" method="post" novalidate class="needs-validation">
    <div class="form-group">
      <label for="username">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
        placeholder="Enter your username"
      />
      <div class="invalid-feedback">Please enter your username</div>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        required
        placeholder="Enter your password"
      />
      <div class="invalid-feedback">Please enter password</div>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
  </form>
</div>
