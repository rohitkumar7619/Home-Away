<% layout("layouts/boilerplate") %>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap")

  /* Form Container */
  .form-container {
    padding: 40px;
    width: 100%;
    max-width: 450px;
    text-align: center;
  }

  /* Heading */
  .centered-heading {
    font-size: 2.5em;
    font-weight: 600;
    margin-bottom: 20px;
    color: #050000; /* Dark text for contrast */
  }

  /* Form Group */
  .form-group {
    margin-bottom: 20px;
    text-align: left;
    position: relative;
  }

  .form-group label {
    font-size: 1.1em;
    font-weight: 600;
    color: #333;
    display: block;
    margin-bottom: 8px;
    transition: all 0.3s ease;
  }

  .form-group input {
    width: 100%;
    padding: 14px;
    background: rgba(
      255,
      255,
      255,
      0.9
    ); /* Semi-transparent white background */
    border: 2px solid rgba(0, 0, 0, 0.701);
    border-radius: 10px;
    font-size: 1em;
    color: #000;
    transition: all 0.3s ease-in-out;
    outline: none;
  }

  .form-group input::placeholder {
    color: rgba(0, 0, 0, 0.6);
    font-weight: 500;
  }

  .form-group input:focus {
    border-color: #ff357a;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 10px rgba(255, 53, 122, 0.5);
  }

  .form-group input:hover {
    border-color: #ff357a;
    background: rgba(255, 255, 255, 1);
  }

  /* Button */
  .btn-primary {
    width: 100%;
    padding: 12px;
    font-size: 1.2em;
    font-weight: 600;
    background: linear-gradient(45deg, #ff357a, #fff172);
    border: none;
    border-radius: 8px;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: scale(1.02);
    box-shadow: 0 0 15px rgba(255, 53, 122, 0.5);
  }

  /* Invalid Feedback */
  .invalid-feedback {
    color: #ff4d4d;
    font-size: 0.9em;
    margin-top: 5px;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .form-container {
      padding: 30px;
    }

    .centered-heading {
      font-size: 2em;
    }
  }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="form-container">
      <h2 class="centered-heading">Signup</h2>
      <form action="/signup" method="post" novalidate class="needs-validation">
        <!-- Username -->
        <div class="form-group">
          <label for="username"></label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
            placeholder="Enter your username"
          />
          <div class="invalid-feedback">Please enter your username</div>
        </div>

        <!-- Email -->
        <div class="form-group">
          <label for="email"></label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
            placeholder="Enter your email"
          />
          <div class="invalid-feedback">Please enter a valid email</div>
        </div>

        <!-- Password -->
        <div class="form-group">
          <label for="password"></label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
            placeholder="Enter your password"
          />
          <div class="invalid-feedback">Please enter a strong password</div>
        </div>

        <!-- Signup Button -->
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>
    </div>
  </div>
</div>
