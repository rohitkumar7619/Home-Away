<!-- FontAwesome CDN (required for icons) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
  .footer {
    background: linear-gradient(135deg, #2c3e50, #4a6491);
    color: #fff;
    padding: 2rem 1rem;
    font-family: 'Poppins', sans-serif;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: start;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding-bottom: 0.2rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
  }

  .link-column {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .link-heading {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: #fff;
  }

  .selectors {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 1rem;
  }

  .selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .tex-select,
  .currency-select {
    background: rgb(255, 255, 255);
    color: #070606;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    padding: 0.4rem 1rem;
    font-size: 0.85rem;
    appearance: none;
    cursor: pointer;
    min-width: 150px;
  }

  .tex-select:hover,
  .currency-select:hover {
    border-color: rgba(255, 255, 255, 0.4);
  }

  .social-section {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .social-heading {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
    color: rgba(255, 255, 255, 0.9);
    text-align: right;
  }

  .social-icons {
    display: flex;
    gap: 0.8rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    color: #fff;
    transition: all 0.2s ease;
  }

  .social-icon:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 1.2rem auto 0;
    padding-top: 1rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-bottom a {
    color: inherit;
    margin-left: 1rem;
    text-decoration: none;
  }

  .footer-bottom a:hover {
    color: #fff;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-links {
      grid-template-columns: 1fr 1fr;
    }

    .selectors {
      padding: 0;
      flex-direction: row;
      justify-content: space-between;
    }

    .social-section {
      align-items: flex-start;
    }

    .social-heading {
      text-align: left;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .selectors {
      flex-direction: column;
    }
  }
</style>

<footer class="footer">
  <div class="footer-content">
    <!-- Left Section - Links -->
    <div class="footer-links">
      <div class="link-column">
        <h4 class="link-heading">Company</h4>
        <a href="/about" class="footer-link">About Us</a>
        <a href="/cancellation" class="footer-link">Cancellation</a>
      </div>
      <div class="link-column">
        <h4 class="link-heading">Support</h4>
        <a href="/support" class="footer-link">Help Center</a>
        <a href="/safety" class="footer-link">Safety</a>
      </div>
      <div class="link-column">
        <h4 class="link-heading">Legal</h4>
        <a href="/terms" class="footer-link">Terms</a>
        <a href="/privacy" class="footer-link">Privacy</a>
      </div>
    </div>

    <!-- Middle Section - Selectors -->
    <div class="selectors">
      <div class="selector">
        <i class="fas fa-globe"></i>
        <select class="tex-select">
          <option value="en">Without Tex</option>
          <option value="hi">With Tex</option>
        </select>
      </div>
      <div class="selector">
        <i class="fas fa-money-bill-wave"></i>
        <select class="currency-select" id="changePrice">
          <option value="inr">₹ INR</option>
          <option value="usd">$ USD</option>
          <option value="eur">€ EUR</option>
        </select>
      </div>

      
    </div>

    <!-- Right Section - Social -->
    <div class="social-section">
      <h4 class="social-heading">Connect with us</h4>
      <div class="social-icons">
        <a href="#" class="social-icon" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="social-icon" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
        <a href="#" class="social-icon" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>



  <script>
    // Wait for DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
      const taxSelect = document.querySelector('.tex-select');
      const currencySelect = document.querySelector('#changePrice');
      
      // Prepare price elements - wrap prices in spans and store original values
      document.querySelectorAll('.card-body p').forEach(p => {
        const priceMatch = p.innerHTML.match(/&#8377; ([\d,]+)( \/ night)/);
        if (priceMatch) {
          const originalPrice = priceMatch[1].replace(/,/g, '');
          p.innerHTML = `
            ${p.querySelector('b') ? p.querySelector('b').outerHTML : ''}
            <br>
            &#8377; <span class="price-value" data-original-price="${originalPrice}">${priceMatch[1]}</span> / night
          `;
        }
      });

      // Function to update prices based on tax and currency
      function updatePrices() {
        const withTax = taxSelect.value === 'hi';
        const currency = currencySelect.value;
        
        const currencySymbols = {
          'inr': '₹',
          'usd': '$',
          'eur': '€'
        };
        
        const exchangeRates = {
          'inr': 1,
          'usd': 0.012,
          'eur': 0.011
        };
        
        document.querySelectorAll('.card-body p').forEach(p => {
          const priceElement = p.querySelector('.price-value');
          if (!priceElement) return;
          
          const originalPrice = parseInt(priceElement.dataset.originalPrice);
          let displayPrice = originalPrice;
          
          // Apply tax if needed
          if (withTax) {
            displayPrice = originalPrice * 1.18;
          }
          
          // Convert currency
          displayPrice = displayPrice * exchangeRates[currency];
          
          // Format based on currency
          let formattedValue;
          if (currency === 'inr') {
            formattedValue = Math.round(displayPrice).toLocaleString('en-IN');
          } else {
            formattedValue = displayPrice.toLocaleString('en-US', {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2
            });
          }
          
          // Update the display while maintaining structure
          const title = p.querySelector('b') ? p.querySelector('b').outerHTML : '';
          p.innerHTML = `
            ${title}
            <br>
            ${currencySymbols[currency]} <span class="price-value" data-original-price="${originalPrice}">${formattedValue}</span> / night
          `;
        });
      }

      // Event listeners
      taxSelect.addEventListener('change', updatePrices);
      currencySelect.addEventListener('change', updatePrices);
    });
  </script>

</footer>