<style>
  /* Second Row: Github link, Inspired By */
  .container {
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #2c3e50;
    margin-bottom: 2rem;
  }

  h4 {
    font-size: 1.5rem;
    color: #34495e;
    margin-top: 1rem;
  }

  h6 {
    font-size: 1.1rem;
    color: #7f8c8d;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1rem;
    color: #7f8c8d;
    line-height: 1.6;
  }

  .bio-toggle {
    cursor: pointer;
    color: #3498db;
    font-weight: bold;
    margin-top: 1rem;
    transition: color 0.3s ease;
  }

  .bio-toggle:hover {
    color: #2980b9;
  }

  .bio-content {
    margin-top: 1rem;
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 0.5rem;
    border: 1px solid #e0e0e0;
  }

  .bio-content a {
    color: #3498db;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .bio-content a:hover {
    color: #2980b9;
  }

  .bio-content i {
    margin-right: 0.5rem;
  }

  /* Team Member Cards */
  .col-3 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .col-3 img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
    border: 4px solid #3498db;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .col-md-3 img:hover {
    transform: scale(1.1);
    border-color: #2980b9;
  }

  /* Contact Cards */
  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .contact-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
  }

  .contact-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 1.5rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .contact-icon:hover {
    transform: scale(1.1);
  }

  .contact-icon.bg-github {
    background-color: #333 !important;
  }

  .contact-icon.bg-airbnb {
    background-color: #ff5a5f !important;
  }

  .contact-card h3 {
    color: #2c3e50;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .contact-card p {
    color: #7f8c8d;
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .contact-card a {
    color: #3498db;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-card a:hover {
    color: #2980b9;
  }

  @media (max-width: 768px) {
    .contact-card {
      padding: 1.5rem;
    }

    .contact-icon {
      width: 50px;
      height: 50px;
      font-size: 1.3rem;
    }

    .contact-card h3 {
      font-size: 1.1rem;
    }

    .contact-card p {
      font-size: 0.9rem;
    }

    .col-md-3 img {
      width: 120px;
      height: 120px;
    }
  }
</style>



