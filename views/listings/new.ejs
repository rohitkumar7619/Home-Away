<% layout ("layouts/boilerplate") %>
<body>
  <h2>Create a new Listing</h2>
  <form method="post" action="/listings">
    <input type="text" name="listings[title]" placeholder="Enter Title" required />
    <br>
    <textarea name="listings[description]" placeholder="Enter Description" required></textarea>
    <br>
    <input type="text" name="listings[image]" placeholder="Enter Image URL/Link" required />
    <br>
    <input type="number" name="listings[price]" placeholder="Enter Price" required />
    <br>
    <input type="text" name="listings[location]" placeholder="Enter Location" required />
    <br>
    <input type="text" name="listings[country]" placeholder="Enter Country" required />
    <br>
    <button type="submit">Add</button>
  </form>
</body>

