<% layout("layouts/boilerplate") %>
<body>
  <div class="row mt-5">
    <div class="col-8 offset-2">
      <h2 class="text-center mb-4">Edit Your Listing</h2>
      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation p-4 shadow-sm rounded border"
        enctype="multipart/form-data">
        
        <!-- Title -->
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="listings[title]" value="<%= listing.title %>" required />
          <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" name="listings[description]" rows="4" required><%= listing.description %></textarea>
          <div class="invalid-feedback">Please enter a description about the place.</div>
        </div>

        <!-- Current Image -->
        <div class="mb-3">
          <label class="form-label d-block">Current Image</label>
          <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded shadow-sm" style="max-height: 200px;">
        </div>

        <!-- Upload New Image -->
        <div class="mb-3">
          <label class="form-label" for="image">Upload New Image</label>
          <input class="form-control" type="file" id="image" name="listing[image]" />
        </div>

        <!-- Price -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label" for="price">Price</label>
            <input class="form-control" type="number" id="price" name="listings[price]" value="<%= listing.price %>" required />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <!-- Country -->
          <div class="col-md-8 mb-3">
            <label class="form-label" for="country">Country</label>
            <input class="form-control" type="text" id="country" name="listings[country]" value="<%= listing.country %>" required />
            <div class="invalid-feedback">Please enter the country name.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="listings[location]" value="<%= listing.location %>" required />
          <div class="invalid-feedback">Please enter your location.</div>
        </div>

        <!-- Submit Button -->
        <button class="btn btn-success w-100" type="submit">Update Listing</button>
      </form>
    </div>
  </div>
</body>
<script src="/js/script.js"></script>
