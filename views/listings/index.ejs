<% layout("layouts/boilerplate") %>
<body>
  <h2 class="centered-heading">All Listings</h2>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
    <% for (let listing of allListing) { %>
    <a href="/listings/<%= listing.id %>" class="card-link">
      <div class="card" style="width: 20rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem">
        <div class="card-body">
          <p>
            <b><%= listing.title %></b>
            <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
