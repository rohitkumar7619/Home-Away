<% layout ("layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
  <h3 >Listing Details :</h3>
</div>
  <div class="card col-5 offset-2">
      <img src=<%= listing.image  %>" class="card-img-top show-img" alt="listing image">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title  %></b>
          <br>
          Created by  = <%= listing.owner.username  %>
          <br>
          <%= listing.description  %>
          <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.location  %>
          <br>
          <%= listing.country  %>

        </p>
      </div>
  </div>
  <br />
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns">
      <!-- Edit Button -->
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-success col-1 offset-2">Edit</a>
      <br>
  
      <!-- Delete Form -->
      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-danger offset-4">Delete</button>
      </form>
    </div>
  <% } %>
  
  </div>
  <div class="col-8 offset-2 mb-3 mt-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
      <div>
        <label for="rating" class="form-label  mb-3 mt-3">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">

      </div>
      <div>
        <label for="comment" class="form-label b-3 mt-3">comment</label>
        <textarea name="review[comment]" id="comment" cols="30" row="10" class="form-control" required></textarea>
        <div class="invalid-feedback"> Please submit some commits</div>
      </div>
      <br>
      <button class="btn  btn-success">Submit</button>
    </form>


    <hr>


    <h4>All Reviews</h4>
<div class="container-review">
  <div class="row">
    <% for (let review of listing.reviews) { %>
      <div class="col-md-6 mb-3">
        <div class="card-review  custom-card">
          <div class="card-review-body">
            <h5 class="card-review-title"> Rohit </h5>
            <p class="card-text">Rating:<%= review.rating %>/5</p>
            <p class="card-text"><%= review.comment %></p>
          </div>
          <br>
          <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-dark"> Delete </button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</div>

  </div>
</div>


