<% layout ("layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
  <h3 >Listing Details :</h3>
</div>
  <div class="card col-6 offset-2">
      <img src=<%= listing.image  %>" class="card-img-top show-img" alt="listing image">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title  %></b>
          <br>
          <%= listing.description  %>
          <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.location  %>
          <br>
          <%= listing.country  %>

        </p>
      </div>
  </div>
  <br />
  <div class="btns">
   <a href="/listings/<%= listing._id %>/edit" class="btn btn-success col-1 offset-2">Edit</a>
   <br>

   <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" >
   <button class="btn btn-danger offset-4">Delete </button>
   </form>
  </div>
  <div class="col-8 offset-2 mb-3 mt-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="">
      <div>
        <label for="rating" class="form-label  mb-3 mt-3">Rating</label>
        <input type="range" min:"1" max: "5" id="rating" name="review[rating]">
      </div>
      <div>
        <label for="commit" class="form-label b-3 mt-3">Commit</label>
        <textarea name="review[commit]" id="commit" cols="30" row="10" class="form-control"></textarea>
      </div>
      <br>
      <button class="btn  btn-success">Submit</button>
    </form>
  </div>
</div>


